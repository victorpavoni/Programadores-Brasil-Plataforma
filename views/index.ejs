<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <br>
        <h1>Perguntas</h1>
        <a href="/perguntar" class="btn btn-dark">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <h3><%= pergunta.titulo %></h3>
            </div>
            <div class="card-footer">
                <a href="pergunta/<%= pergunta.id %>" class="btn btn-dark">Responder</a>
            </div>
        </div>
        <br>
        <% }) %>
    </div>
    <%- include('partials/footer.ejs') %>
</body>